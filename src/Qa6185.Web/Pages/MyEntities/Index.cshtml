@using Qa6185.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using Qa6185.Localization
@inject IHtmlLocalizer<Qa6185Resource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["MyEntities"].Value;
    PageLayout.Content.MenuItemName = Qa6185Menus.MyEntities;
}

