@section content_toolbar {
    <abp-button id="ExportToExcelButton" text="@L["ExportToExcel"].Value" icon="download" size="Small" button-type="Primary" />
    @if (await Authorization.IsGrantedAsync(Qa6185Permissions.MyEntities.Create))
    {
        <abp-button id="NewMyEntityButton" text="@L["NewMyEntity"].Value" icon="plus" size="Small" button-type="Primary" />
    }
